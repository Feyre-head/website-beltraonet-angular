{
  "extends": [
    "development"
  ],
  "hints": {
    "compat-api/css": [
      "default",
      {
        "ignore": [
          "scrollbar-width",
          "-webkit-text-size-adjust",
          "-webkit-overflow-scrolling",
          "color-adjust",
          "mask-position",
          "mask-image",
          "mask-size"
        ]
      }
    ],
    "no-inline-styles": "off",
    "css-prefix-order": "off",
    "axe/structure": [
      "default",
      {
        "list": "off"
      }
    ]
  },
  "browserslist": [
    "defaults",
    "not ie 11",
    "not chrome <= 112",
    "not ios_saf <= 18.5",
    "not safari <= 18.5",
    "not samsung <= 28",
    "not and_ff <= 140",
    "not firefox <= 140"
  ]
}